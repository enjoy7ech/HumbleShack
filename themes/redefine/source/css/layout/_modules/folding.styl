summary {
    &:marker {
        margin-right 100px
    }

    box-shadow var(--redefine-box-shadow-flat) 
    border-radius $redefine-border-radius-small
    padding 15px
    font-size 1.2rem
    background-color var(--background-color)
    line-height 2rem
    margin-bottom 1rem

    cursor pointer

    &:hover {
        background-color #A6A6A630
    }

    p {
        display inline-block
        margin 0
    }
}

details div.content {
    padding-left 30px
    margin-bottom 1rem
}


::marker {
    padding-left 100px
}

